<style>
  /* Ensure no margin or padding on body and html */
html, body {
    margin: 0;
    padding: 0;
    overflow-x: hidden; /* Prevent horizontal scrolling */
}

@import url('https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;600&display=swap');

/* Move the intro image to the top */
.intro-img {
    margin: 0;
    padding: 0;
    width: 100%;
    position: relative;
    top: 0;
}

/* Ensure the image takes full width and is not pushed down */
.intro-img img {
    display: block;
    width: 100%;
    height: auto;
