.custom-container {
    width: 75vw; /* 75% of viewport width */
    height: 35vh; /* 35% of viewport height */
    background-color: #073B7F;
    border-radius: 20px; /* Rounded corners */
    box-shadow: 0 4px 10px rgba(0, 0, 0, 0.7); /* Black shadow */
    display: flex;
    align-items: center;
    padding: 20px;
    transition: transform 0.3s ease-in-out, box-shadow 0.3s ease-in-out; /* Smooth transition */
    font-family: 'Poppins', sans-serif; /* Applying the new font */
    margin-bottom: 30px; /* ⬅️ Increased space between containers */
    margin-top: 30px;
}

/* Grow effect on hover */
.custom-container:hover {
    transform: scale(1.05); /* Slightly increase size */
    box-shadow: 0 6px 15px rgba(0, 0, 0, 0.8); /* Enhanced shadow effect */
}

/* Left Section (Photo + Social Media) */
.left-section {
    width: 30%;
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
}
/* Circular Photo */
.photo{
    width: 220px;
    height: 220px;
    border-radius: 50%;
    margin-bottom: 30px; /* Increased space between photo & links */
}

.photo img{
    width: 220px;
    height: 220px;
    border-radius: 50%;
    
}

/* Social Media Links */
.social-links {
    display: flex;
    gap: 40px;
}

.social-links a {
    color: white;
    font-size: 25px;
    transition: color 0.3s ease-in-out;
}

.social-links a:hover {
    color: #fac82d; /* Hover effect */
}

/* Right Section (Text Content) */
.right-section {
    width: 70%;
    padding-left: 20px;
    display: flex;
    flex-direction: column;
    justify-content: flex-start; /* Align items at the top */
}

/* Title - Bigger font size and moved higher */
.right-section h2 {
    font-size: 2.2rem; /* Increased font size */
    margin-bottom: 30px; /* More space between title & subtitle */
    margin-top: -5%; /* Moves title higher */
    font-family: 'Poppins', sans-serif; /* Font applied */
    color: #ffffff;
}

/* Subtitle - Moved higher and increased spacing */
.right-section h3 {
    font-size: 1.3rem; /* Slightly bigger */
    color: #FAC82D;
    margin-bottom: 5%; /* More spacing between subtitle and paragraph */
    margin-top: -10px; /* Moves subtitle higher */
    font-family: 'Poppins', sans-serif; /* Font applied */
}

/* Paragraph - No changes but ensures consistency */
.right-section p {
    font-size: 1.1rem;
    opacity: 1;
    font-family: 'Poppins', sans-serif; /* Font applied */
    text-align: justify;
}


/* Responsive Design */
@media (max-width: 768px) {
    .custom-container {
        flex-direction: column;
        height: auto;
        padding: 15px;
        margin-bottom: 20px; /* More space between containers on small screens */
        margin-top: 30px;
    }

    .left-section {
        width: 100%;
        margin-bottom: 10px;
    }

