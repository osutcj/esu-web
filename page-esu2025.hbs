}

.faq-section {
    background: #ffffff;
    padding: 50px 5%;
    font-family: 'Poppins', sans-serif;
}

.faq-container {
    max-width: 75%;
    margin: 0 auto;
}

.faq-item {
    background: #073B7F;
    border-radius: 15px;
    margin-bottom: 25px;
    overflow: hidden;
    box-shadow: 0 4px 10px rgba(255, 255, 255, 0.2);
    transition: transform 0.2s ease-in-out; /* increase size of item (both question and answer) */
}

.faq-item:hover {
    transform: scale(1.02); /* bigger item */
}

.faq-question {
    width: 100%;
    background: none;
    border: none;
    color: rgb(255, 255, 255);
    font-size: 1.4rem;
    padding: 20px;
    text-align: left;
    cursor: pointer;
    outline: none;
    transition: background 0.3s; /* for color change */
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding-right: 3%;
    padding-left: 3%;
    font-family: 'Poppins', sans-serif;
}

.faq-arrow {
    transition: transform 0.4s ease-in-out; /* arrow spin */
}

.faq-item.active .faq-arrow {
    transform: rotate(180deg); /* arrow 180deg spin */
}

/* Ensure the arrow rotates properly when active */
.rotate {
    transform: rotate(180deg);
    transition: transform 0.3s ease-in-out;
}

.faq-question:hover {
    background: #fac82d;
    color: #073B7F;
    transition: all 0.3s ease-in-out; /* color change when hover */
}

/* FAQ Answer - Smoother expand/collapse */
.faq-answer {
    background: #1366d3;
    color: rgb(255, 255, 255);
    padding: 0 20px;
    max-height: 0;
    overflow: hidden;
    transition: max-height 0.6s cubic-bezier(0.4, 0, 0.2, 1), padding 0.4s ease-in-out; /* expand the answer */
    font-family: 'Poppins', sans-serif;
}

.faq-answer a {
  color: #ffffff; /* default white color */
  text-decoration: underline;
  transition: color 0.3s ease-in-out;
}

.faq-answer a:hover {
  color: #fac82d; /* yellow on hover */
}


/* Open state - smooth transition */
.faq-item.active .faq-answer {
    max-height: 250vh; /* Increased max height for better visibility */
    padding: 20px;
}

