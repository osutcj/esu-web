.faq-container {
    max-width: 900px;
    margin: 0 auto;
}

.faq-item {
    background: #073B7F;
    border-radius: 15px;
    margin-bottom: 25px;
    overflow: hidden;
    box-shadow: 0 4px 10px rgba(255, 255, 255, 0.2);
    transition: transform 0.2s ease-in-out; /* increase size of item (both question and answer) */
}

.faq-item:hover {
    transform: scale(1.02); /* bigger item */
}

.faq-question {
    width: 100%;
    background: none;
    border: none;
    color: rgb(255, 255, 255);
    font-size: 1.4rem;
    padding: 20px;
    text-align: left;
    cursor: pointer;
    outline: none;
    transition: background 0.3s; /* for color change */
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding-right: 3%;
    padding-left: 3%;
}

.faq-arrow {
    transition: transform 0.4s ease-in-out; /* arrow spin */
}

.faq-item.active .faq-arrow {
    transform: rotate(180deg); /* arrow 180deg spin */
}

/* Ensure the arrow rotates properly when active */
.rotate {
    transform: rotate(180deg);
    transition: transform 0.3s ease-in-out;
}

.faq-question:hover {
    background: #fac82d;
    color: #073B7F;
    transition: all 0.3s ease-in-out; /* color change when hover */
}

/* FAQ Answer - Smoother expand/collapse */
.faq-answer {
    background: #1366d3;
    color: rgb(255, 255, 255);
    padding: 0 20px;
    max-height: 0;
    overflow: hidden;
    transition: max-height 0.6s cubic-bezier(0.4, 0, 0.2, 1), padding 0.4s ease-in-out; /* expand the answer */
}

/* Open state - smooth transition */
.faq-item.active .faq-answer {
    max-height: 300px; /* Increased max height for better visibility */
    padding: 20px;
}

.faq-answer a {
  color: #ffffff; /* default white color */
  text-decoration: underline;
  transition: color 0.3s ease-in-out;
}

.faq-answer a:hover {
  color: #fac82d; /* yellow on hover */
}

.faq-hero {
  position: relative;
  background-image: url('/assets/images/Banner Page/FAQ.jpg');
  background-size: cover;
  background-position: center;
  width: 100%;
  height: 90vh;
  display: flex;
  align-items: center;
  justify-content: center;
  text-align: center;
  z-index: 1;
  overflow: hidden;
}

/* Add dark overlay */
.faq-hero::before {
  content: "";
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.4); /* Adjust opacity here */
  z-index: -1;
}

.faq-hero h1 {
  color: #ffffff;
  font-size: 6rem;
  font-weight: 700;
  font-family: 'Poppins', sans-serif;
  text-align: center;
  text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.6);
  margin: 0;
  line-height: 1.4; /* Slightly increased line spacing */
}

.faq-hero h1 .line1 {
  margin-bottom: 0.5em;
}
.faq-hero h1 .line2 {
  margin-top: 0;
}

/* 1501px - 1800px */
@media (max-width: 1800px) {
  .faq-hero h1 {
    font-size: 5.2rem;
    line-height: 1.3;
  }

  .faq-hero h1 .line1 {
    margin-bottom: 0.45em;
  }
}

/* 951px - 1500px */
@media (max-width: 1500px) {
  .faq-hero h1 {
    font-size: 4.4rem;
    line-height: 1.3;
  }

  .faq-hero h1 .line1 {
    margin-bottom: 0.4em;
  }
}

/* 768px - 950px */
@media (max-width: 950px) {
  .faq-hero h1 {
    font-size: 3.8rem;
    line-height: 1.25;
  }

  .faq-hero h1 .line1 {
    margin-bottom: 0.35em;
  }
}

/* Below 768px */
@media (max-width: 768px) {
  .faq-hero h1 {
    font-size: 2.6rem;
    line-height: 1.2;
    padding: 0 10px;
  }

  .faq-hero h1 .line1 {
    margin-bottom: 0.3em;
  }
}


