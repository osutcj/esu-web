<!-- Carousel -->
<style>
    .container-carousel {
        width: 100%;
    }

    h1.carousel-title {
        font-size: 2rem;
        text-align: center;
        color: black;
    }
    h2.carousel-subtitle{
        font-size: 1.1rem;
        text-align: center;
    }
    .lead{
        font-size:1.25rem;
        font-weight:300
    }

.button {
  display: inline-block;
  border-radius: 30px;
  background-color: #ffffff4c;
  border: none;
  color: #FFFFFF;
  text-align: center;
  font-size: 20px;
  padding: 20px;
  width: 30%;
  transition: all 0.5s;
  cursor: pointer;
  margin: 5px;
}

.button span {
  cursor: pointer;
  display: inline-block;
  position: relative;
  transition: 0.5s;
  font-weight: 600;
  font-size: large;
}

.button span:after {
  content: '\00bb';
  position: absolute;
  opacity: 0;
  top: 0;
  right: -20px;
  transition: 0.5s;
}

.button:hover span {
  padding-right: 25px;
}

.button:hover span:after {
  opacity: 1;
  right: 0;
}

@media only screen and (max-width: 800px) {
    .button{
        width: 70%;
    }
}

.lead{
    font-size: xx-large;
}


#anunturi{
    width: 100%;
    margin: 0 auto;
}
@media only screen and (max-width: 800px) {
    .lead{
        font-size: large;
    }
    #anunturi{
        width: 100%;
        margin: 0 auto;
    }

}
.carousel-inner{
    height: 100vh;
    display: flex;
    align-items: center;
}
@media only screen and (max-width: 1200px) {
   .carousel-inner{
        height: auto;
        display: block;
    }
}

</style>

<div class="container-carousel m-0" style="max-height: 50%;">

    {{#if title}}
    <h1 class="carousel-title m-5">
        {{title}}
    </h1>
    {{/if}}

    {{#if subtitle}}
    <h2 class="carousel-subtitle m-2 mb-5">
        {{subtitle}}
    </h2>
    {{/if}}

    <div id="anunturi" class="carousel slide" data-bs-ride="carousel">
        <div class="carousel-indicators" style="display: none;">
            <button type="button" data-bs-target="#anunturi" data-bs-slide-to="0" class="active"></button>
            <button type="button" data-bs-target="#anunturi" data-bs-slide-to="1"></button>
            <button type="button" data-bs-target="#anunturi" data-bs-slide-to="2"></button>
            <button type="button" data-bs-target="#anunturi" data-bs-slide-to="3"></button>
            <button type="button" data-bs-target="#anunturi" data-bs-slide-to="4"></button>
            <button type="button" data-bs-target="#anunturi" data-bs-slide-to="5"></button>
        </div>

        <div class="carousel-inner">
            <div class="carousel-item active"><img src="assets/images/Landing_page/1.jpg" alt="Imagine 1" class="w-100 h-50"></div>
            <div class="carousel-item "><img src="assets/images/Landing_page/2.jpg" alt="Imagine 2" class="w-100 h-50"></div>
            <div class="carousel-item "><img src="assets/images/Landing_page/3.jpg" alt="Imagine 3" class="w-100 h-50"></div>
            <div class="carousel-item "><img src="assets/images/Landing_page/4.jpg" alt="Imagine 4" class="w-100 h-50"></div>
            <div class="carousel-item "><img src="assets/images/Landing_page/5.jpg" alt="Imagine 5" class="w-100 h-50"></div>
            <div class="carousel-item "><img src="assets/images/Landing_page/6.jpg" alt="Imagine 6" class="w-100 h-50"></div>
    
        </div>

        <button class="carousel-control-prev" type="button" data-bs-target="#anunturi" data-bs-slide="prev">
            <span class="carousel-control-prev-icon"></span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#anunturi" data-bs-slide="next">
            <span class="carousel-control-next-icon"></span>
        </button>
    </div>

    <div style="margin: auto; flex-direction: column; margin: 20px; text-align:center;">
        <p class="lead" style="margin-bottom: 20px;">
          Înscrie-te acum la Engineering Summer University și fă primul pas spre viitorul tău în lumea tehnologiei!  
        </p>
    </div> 
    <div style="margin: auto; flex-direction: column; margin-top: -10px; text-align:center; padding-top:2rem">
        <a href="/liste">
            <button class="button" style = "margin-top: 10px; background-color: #FF8000;"> 
                <span>Liste Finale</span>
            </button>
        </a>
    </div>

</div>

