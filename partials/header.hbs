
<style>
  @import url('https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;600&display=swap');
  /* Style for the hamburger menu button */
  .menu {
    cursor: pointer;
    position: fixed;
    top: 15px; /* Position the button at the top */
    left: 5%; /* Position the button to the left */
    z-index: 3; /* Ensure it stays above other elements */
    opacity: 1;
    z-index: 1000;
    font-family: 'Poppins', sans-serif; /* Applying the new font */
  }

  /* Smooth transition for hover effect */
.bar1, .bar2, .bar3 {
    width: 35px;
    height: 5px;
    background-color: #ffffff;
    margin: 6px 0;
    opacity: 1;
    transition: transform 0.4s, background-color 0.6s ease-in-out; /* Smooth color transition */
}

/* Change bars to white on hover */
.menu:hover .bar1,
.menu:hover .bar2,
.menu:hover .bar3 {
    background-color: #fac82d; /* Change to white */
}

  /* Animation when the hamburger icon changes to "X" */
  .change .bar1 {
    transform: translate(0, 11px) rotate(-45deg);
  }

  .change .bar2 {
    opacity: 0; /* Hide the middle bar */
  }

  .change .bar3 {
    transform: translate(0, -11px) rotate(45deg);
  }

.sidenav {
    height: 100vh; /* Full height of the screen */
    width: 0; /* Initially hidden */
    position: fixed;
    top: 0;
    left: 0;
    background-color: #06265e;
    overflow: hidden;
    transition: 0.8s ease;
    padding-top: 0; /* Remove extra padding */
    
    z-index: 500;
   font-family: 'Poppins', sans-serif; /* Applying the new font */
    /* Center content vertically and horizontally */
    display: flex;
    flex-direction: column;
    justify-content: center;
}


/* Keyframes for sliding in from the left */
@keyframes slideIn {
    from {
        transform: translateX(-300px); /* Start off-screen */
        opacity: 0; /* Invisible */
    }
    to {
        transform: translateX(0); /* Move to position */
        opacity: 1; /* Fully visible */
    }
}

/* Keyframes for sliding out to the left */
@keyframes slideOut {
    from {
        transform: translateX(0); /* Start in position */
        opacity: 1; /* Fully visible */
    }
    to {
        transform: translateX(-300px); /* Move off-screen */
        opacity: 0; /* Invisible */
    }
}

/* Default state - links are fully visible but positioned off-screen */
.sidenav a {
    padding: 8px 8px 8px 32px;
    padding-left: 20%;
    text-decoration: none;
    font-size: 30px;
    color: #fac82d;
    display: block;
    transition: color 0.4s ease-in-out;
    transform: translateX(-300px); /* Start off-screen */
    opacity: 1; /* Keep visible until animation changes */
}

/* Animate links in when sidebar opens */
.sidenav.show-links a {
    animation: slideIn 0.7s ease-out forwards;
}

/* Animate links out when sidebar closes */
.sidenav.hide-links a {
    animation: slideOut 0.5s ease-in forwards;
}

  /* Hover effect for the links */
  .sidenav a:hover {
    color: #ffffff;
  }

  /* When the sidebar is open */
  .sidenav.open {
    width: 22%; /* Width of the open sidebar */
  }

  /* Make the links visible when the sidebar is fully open */
  .sidenav.show-links a {
    opacity: 1; /* Show the links */
  }

  /* Style for InfoTech button */
  .buton-infotech {
    height: auto;
    width: 90%;
  }

