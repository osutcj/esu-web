<script>
  // Function to toggle both the button animation and the sidebar
function toggleNav(x) {
    x.classList.toggle("change"); // Toggle the hamburger button animation
    var nav = document.getElementById("mySidenav");

    if (nav.classList.contains("open")) {
        // Start exit animation first
        nav.classList.remove("show-links");
        nav.classList.add("hide-links");

        // Wait for last item's exit animation to finish before closing sidebar
        setTimeout(function() {
            nav.classList.remove("open", "hide-links"); // Close sidebar
        },250); // Delay should match last item's exit animation (0.7s + buffer)
    } else {
        // Open sidebar first, then start entry animation
        nav.classList.add("open");

        setTimeout(function() {
            nav.classList.add("show-links");
        }, 200); // Start animation after sidebar opens
    }
}

window.addEventListener("scroll", function () {
    var navbar = document.querySelector(".navbar");
    if (window.scrollY > 50) { // When scrolled down 50px
        navbar.classList.add("scrolled");
    } else {
        navbar.classList.remove("scrolled");
    }
});


  // Reset sidebar and menu button to initial state when leaving the page
  window.addEventListener("beforeunload", function() {
    var nav = document.getElementById("mySidenav");
    nav.classList.remove("open", "show-links"); // Close the sidebar
    var menuButton = document.querySelector(".menu");
    menuButton.classList.remove("change"); // Reset the hamburger button
  });
</script>

